---
import Layout from "../../layouts/Layout.astro";
import WorkItem from "../../components/work/WorkItem.astro";

const work = await Astro.glob("../work/*.{md,mdx}");
---

<Layout title="Work History">
  <div class="max-w-2xl">
    <ul>
      {work.map((item) => <WorkItem content={item.frontmatter} />)}
    </ul>
  </div>
</Layout>

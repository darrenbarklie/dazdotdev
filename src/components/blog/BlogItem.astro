---
import CategoryTags from "../_globals/articles/CategoryTags.astro";

export interface Props {
  url: string;
  content: {
    id: string;
    title: string;
    description: string;
    date: string;
    categories: string[];
  };
}

const {
  url,
  content: { id, title, description, date, categories },
} = Astro.props as Props;
---

<li id={`work-${id}`} class="border border-gray-400 rounded p-4 pb-6 mb-4">
  <header
    class="flex justify-between items-center border-b border-gray-400 pb-2 mb-4"
  >
    <a href={url}>
      <h3 class="text-xl underline font-semibold">{title}</h3>
    </a>
    <span class="text-gray-400 flex-shrink-0 pl-4">[{date}]</span>
  </header>

  <CategoryTags categories={categories} />

  <div class="mt-4">
    <p>{description}</p>
  </div>
</li>

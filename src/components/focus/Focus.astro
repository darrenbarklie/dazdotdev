---
const { type, title } = Astro.props;
---

{
  type === "headline" ? (
    <article
      role="listitem"
      class="px-4 pt-4 pb-6 border border-gray-400 rounded my-6"
    >
      <header class="flex justify-between items-center border-b border-gray-400 pb-2 mb-4">
        <h2 class="text-2xl">{title}</h2>
      </header>
      <div class="text-base">
        <slot />
      </div>
    </article>
  ) : null
}
{
  type === "highlight" ? (
    <article
      role="listitem"
      class="px-4 pt-2 pb-4 border border-gray-400 rounded my-4"
    >
      <header class="flex justify-between items-center border-b border-gray-400 pb-1 mb-2">
        <h3 class="text-lg">{title}</h3>
      </header>
      <div class="text-sm">
        <slot />
      </div>
    </article>
  ) : null
}
